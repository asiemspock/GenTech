@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center container">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    @* //Company Count *@
    <div class="card mb-5">
        <div class="card-header">
            <h3 class="card-title">
                Number Of Companies
            </h3>
        </div>
        <div class="card-body">
            @Model.TotalCompanies
        </div>
    </div>
    @* //User Count *@
    <div class="card mb-5">
        <div class="card-header">
            <h3 class="card-title">
                Number Of Users
            </h3>
        </div>
        <div class="card-body">
            @Model.TotalUsers
        </div>
    </div>

    @* //Company List sorted by highest user count *@
    <div class="card mb-5">
        <div class="card-header">
            <h3 class="card-title">
                List Of Companies
            </h3>
        </div>
        <div class="card-body">
            @foreach(var company in Model.CompaniesList)
            {
                <li>@company.CompanyName</li>
            }
        </div>
    </div>
</div>
